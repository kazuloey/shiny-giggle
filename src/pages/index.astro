    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>Demo portfolio</title>
    </head>
    
    <body>
        <header class="header">
          <div class="logo">
            <div class="logo-line"></div>
            <div class="logo-line"></div>
            <div class="logo-line"></div>
          </div>
          
          <div class="top-right">
            <div class="time-display"></div>
            
            <a href="https://instagram.com/kazuloey" class="social-link">
            </a>
          </div>
        </header>

        <div class="user-info">
          <span class="username">@{username}</span>
          <span class="date-time" id="current-datetime">{formattedDate}</span>
        </div>

        <nav class="nav">
          <a href="/" class="nav-item active">HOME</a>
          <a href="/works" class="nav-item">WORKS</a>
          <a href="/profile" class="nav-item">PROFILE</a>
