---
// Simple index page to avoid plugin issues
import Layout from '../layouts/Layout.astro';
---

<Layout title="11:37 Portfolio | kazuloey">
  <!-- Main content -->
  <main class="main">
    <div class="page">
      <!-- KV section -->
      <div class="kv">
        <div class="kv-inner">
          <div class="kv-content">
            <div class="title">
              <h1 class="title-main">
                11:37<br>illustration<br>portfolio
              </h1>
              <span class="barcode" aria-hidden="true" translate="no" data-text="portfolio">portfolio</span>
            </div>
            <div class="kv-sns">
              <a href="https://twitter.com/kazuloey" class="button-arrow" target="_blank" rel="noreferrer">
                <span class="button-inner">Twitter</span>
              </a>
              <a href="https://www.instagram.com/kazuloey" class="button-arrow" target="_blank" rel="noreferrer">
                <span class="button-inner">Instagram</span>
              </a>
            </div>
          </div>

          <!-- KV Images -->
          <div class="kv-images">
            <div class="kv-main-image">
              <img src="/images/meme_full.webp" alt="Main character illustration">
            </div>
          </div>

          <!-- KV Grid -->
          <div class="kv-grid">
            <div class="grid-cells"></div>
          </div>
        </div>
      </div>

      <!-- Event section -->
      <section class="event-section">
        <div class="section-heading">
          <div class="heading">
            <h2 class="heading-main">event</h2>
            <div class="heading-barcode">
              <span class="barcode" aria-hidden="true" translate="no" data-text="event">event</span>
            </div>
          </div>
          <div class="heading-desc">
            <p>Event schedule updates.</p>
            <p>Check <a href="https://twitter.com/kazuloey" target="_blank" rel="noreferrer">Twitter(X)</a> for latest info.</p>
          </div>
        </div>
        <p class="section-label">(schedule)</p>
        <div class="event-list">
          <div class="event-card">
            <div class="event-date">
              <time datetime="2025-10-30">2025.10.30</time>
              <span>-</span>
              <time datetime="2025-10-31">2025.10.31</time>
            </div>
            <h3 class="event-title">Design Festival</h3>
          </div>
        </div>
      </section>

      <!-- Profile section -->
      <section class="profile-section">
        <div class="section-heading">
          <div class="heading">
            <h2 class="heading-main">profile</h2>
            <div class="heading-barcode">
              <span class="barcode" aria-hidden="true" translate="no" data-text="profile">profile</span>
            </div>
          </div>
        </div>
        <div class="profile-content">
          <p class="profile-name">11:37</p>
          <div class="profile-desc">
            <p>Freelance illustrator based in Tokyo.</p>
            <p>Specializing in vibrant colors and clean linework.</p>
            <p>Creating illustrations, apparel designs, and goods.</p>
          </div>
          <div class="profile-more">
            <a href="/profile" class="button">
              <span class="button-inner">See more</span>
            </a>
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>