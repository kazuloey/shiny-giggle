---
import Card from "../components/Card.astro"
import { gsap } from "gsap/gsap-core";
import PhysicsPropsPlugin from 'gsap/PhysicsPropsPlugin';
// Registra el plugin
gsap.registerPlugin(PhysicsPropsPlugin);
---






<!DOCTYPE html>
<html lang="ja" data-op-end="false">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link href="https://fonts.googleapis.com/css2?family=Bitcount+Grid+Single:wght@100..900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/style.css" /> <!-- Enlace a style.css -->
     
        <title>Demo portfolio</title>
        <style>
         /* Estilo para el cuadrado */
         #square {
          width: 2cm; /* Ancho del cuadrado */
          height: 2cm; /* Alto del cuadrado */
          background-color: rgb(162, 239, 40); /* Color verde */
          border-radius: 10px; /* Esquinas redondeadas */
          opacity: 0; /* Opacidad inicial */
          position: absolute; /* Para poder animar su posición */
          top: 50%; /* Centrar verticalmente en pantalla */
          left: 50%; /* Centrar horizontalmente en pantalla */
          transform: translate(-50%, -50%); /* Ajustar la posición para centrar */
         }
        </style>
    </head>

    <body>
         <a href="/">Inicio</a>
	     <a href="/work/">Portfolio</a>
         <a href="/about/">Sobre mi</a>
         <a href="/contact/">Contact</a>  
    
    <div class="bitcount-grid-single">
      <div class="item">Elemento 1</div>
      <div class="item">Elemento 2</div>
      <div class="item">Elemento 3</div>
      <!-- Agrega más elementos según sea necesario -->
    </div>
        <div id="square"></div> <!-- El cuadrado a animar -->
    
    <script>
import gsap from "gsap";

      // Ejecutar la animación al cargar la página
      window.onload = () => {
        // Primero, animar la opacidad a 1
        gsap.to('#square', {
          opacity: 1, // Termina con opacidad 1
          duration: 2, // Duración de la animación de opacidad
          rotateY: 360, // Rota sobre el eje Y
          onComplete: () => {
            // Luego, aplica la física
            gsap.to('#square', {
              physicsProps: {
                  x: { velocity: 100, acceleration: 200 },
                  y: { velocity: -200, friction: 0.1 },
              },
            });
          }
        });
      };
    </script>
        </div>
     <h1>Portfolio</h1>
     <p>que divertido y complicado es esto</p> 
    </body>
</html>