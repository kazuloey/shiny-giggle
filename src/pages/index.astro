        <div id="verde"></div> <!-- El cuadrado a animar -->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r173/three.min.js"></script>
    <script>
    import gsap from "gsap";
      // Ejecutar la animación al cargar la página
      window.onload = () => {
        // Primero, animar la opacidad a 1
        gsap.to('#verde', {
          opacity: 1, // Termina con opacidad 1
          duration: 1, // Duración de la animación de opacidad
          rotateY: 360, // Rota sobre el eje Y
          onComplete: () => { // Luego, aplica la física
            gsap.to('#verde', {
              duration: 5, // Duración de la animación física  
              physicsProps2D: {
                x:{velocity:100, acceleration:400},
                y:{velocity:100, friction:0.002}
              },
              onComplete: () => {
                console.log("Animación completa");
              }
            });
          }
        });
      };
    </script>
